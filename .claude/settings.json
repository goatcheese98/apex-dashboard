{
  "hooks": {
    "UserPromptSubmit": [
      {
        "matcher": ".*",
        "hooks": [
          {
            "type": "command",
            "command": "python3 scripts/project-manager.py --startup",
            "timeout": 15000
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": ".*",
        "hooks": [
          {
            "type": "command",
            "command": "python3 scripts/project-manager.py --shutdown",
            "timeout": 8000
          }
        ]
      }
    ]
  },
  "permissions": {
    "tools": {
      "Bash": "allow",
      "Edit": "allow",
      "Write": "allow",
      "Read": "allow",
      "MultiEdit": "allow",
      "Glob": "allow",
      "Grep": "allow",
      "Task": "allow",
      "TodoWrite": "allow"
    }
  },
  "browser": {
    "coordination_mode": "shared",
    "allow_multiple_sessions": true,
    "auto_navigate": false,
    "use_existing_session": true
  }
}